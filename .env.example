# ZEROPAIN Docker Deployment Configuration

# Domain (use localhost for local testing)
DOMAIN=localhost

# Database
POSTGRES_USER=zeropain
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=zeropain

# API Security
SECRET_KEY=CHANGE_THIS_TO_A_RANDOM_64_CHAR_STRING
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
WORKERS=4

# Intel Acceleration (optional)
USE_OPENVINO=true
OPENVINO_DEVICE=AUTO
